@model IEnumerable<Loja.Models.Roupa>

@{
    ViewData["Title"] = "Roupas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Roupas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Nova Roupa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoupaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoupaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoupaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

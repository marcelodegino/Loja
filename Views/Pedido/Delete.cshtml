@model Loja.Models.Pedido

@{
    ViewData["Title"] = "Excluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir Pedido</h1>

<h3>Tem certeza que deseja excluir?</h3>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Roupa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Roupa.RoupaId)
